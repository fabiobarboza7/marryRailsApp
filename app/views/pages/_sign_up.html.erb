<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :inline_form, html: { class: 'form-inline' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.input :email, autofocus: true, autocomplete: "email" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.input :password, autocomplete: "new-password" %>
    <%= f.input :password_confirmation, autocomplete: "new-password" %>
    <%= f.submit "Sign up" %>  
<% end %>

<%= render "devise/shared/links" %>